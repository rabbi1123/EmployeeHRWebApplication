@model IEnumerable<Employee>
@{
    ViewBag.Title = "Employees";
}

<h2>Employees</h2>
<p>@Html.ActionLink("Add New Employee", "Create")</p>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Position</th>
        <th>Salary</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Division</td>
            <td>@item.Building</td>
            <td>@item.Title</td>
            <td>@item.Room</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>